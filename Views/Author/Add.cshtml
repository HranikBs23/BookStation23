@model BookStation.Models.ViewModels.AddAuthorViewModel

<h1>Add Author</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Biography">Biography</label>
        <textarea class="form-control" id="Biography" name="Biography">@Model.Biography</textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Image">Image</label>
        <input type="file" class="form-control-file" id="Image" name="Image" accept="image/*" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Author</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to Authors</a>
