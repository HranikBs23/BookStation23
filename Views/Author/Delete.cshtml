@model BookStation.Models.ViewModels.DeleteAuthorViewModel

<h2>Delete author: @Model.Name</h2>

<p>Are you sure you want to delete this author and all of their related books?</p>

<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                Name
            </dt>
            <dd>
                @Model.Name
            </dd>
            <dt>
                Address
            </dt>
            <dd>
                @Model.Address
            </dd>
            <dt>
                Biography
            </dt>
            <dd>
                @Model.Biography
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <img src="@Model.Image" alt="@Model.Name" class="img-responsive" />
    </div>
</div>

@if (Model.Books.Count > 0)
{
    <h4>Books by this author:</h4>
    <ul>
        @foreach (var book in Model.Books)
        {
            <li>@book.Title</li>
        }
    </ul>
}

<form asp-controller="Author" asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.AuthorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Author" asp-action="Index" class="btn btn-default">Cancel</a>
</form>
